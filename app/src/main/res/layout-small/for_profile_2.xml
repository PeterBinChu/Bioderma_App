<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/border_with_shadow3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/profileInformationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:text="First name: "
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="253dp" />

                <EditText
                    android:id="@+id/edit_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:inputType="textPersonName"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:layout_marginRight="10dp"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:text="Second name: "
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="253dp" />

                <EditText
                    android:id="@+id/edit_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:layout_marginRight="10dp"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    android:backgroundTint="@color/white"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    android:text="Phone number: "
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="253dp" />

                <EditText
                    android:id="@+id/edit_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:digits="0123456789+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    android:text="Country: "
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="253dp" />

                <EditText
                    android:id="@+id/edit_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    android:text="City: "
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="253dp" />

                <EditText
                    android:id="@+id/edit_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    android:text="Street: "
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="253dp" />

                <EditText
                    android:id="@+id/edit_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:fontFamily="@font/quick"
                    android:textColor="@color/white"
                    android:shadowColor="#66333333"
                    android:textSize="19dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:inputType="textPersonName" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/profile_information_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:src="@mipmap/ic_confirm"
            android:visibility="invisible"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>