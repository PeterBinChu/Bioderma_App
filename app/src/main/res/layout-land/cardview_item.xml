<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/card_view_id"
    android:background="@drawable/border_with_shadow2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_id"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:src="@drawable/round_logo"
            app:civ_border_color="#EF78A8"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#EF78A8"
            app:civ_shadow_radius="3dp" />

        <TextView
            android:id="@+id/product_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:shadowDx="10"
            android:shadowDy="5"
            android:textFontWeight="700"
            android:shadowRadius="10"
            android:shadowColor="#66333333"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:fontFamily="@font/quick"
            android:textColor="@color/white"
            android:singleLine="true"
            android:text="product"
            android:textSize="20dp"  />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:shadowDx="10"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:shadowColor="#66333333"
            android:fontFamily="@font/quick"
            android:textFontWeight="700"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:text="123"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/card_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_border2"
            android:text="Add"
            android:textFontWeight="700"
            android:textColor="@color/white"
            android:fontFamily="@font/quick"
            android:textSize="25dp"
            android:shadowDx="10"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:shadowColor="#66333333"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>