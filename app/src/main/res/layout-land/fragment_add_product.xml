<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.AddProduct"
    android:orientation="vertical"
    android:id="@+id/admin_add_layout"
    android:background="@drawable/best">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_with_shadow3"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:text="Image"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:layout_gravity="center"
                    android:textSize="25dp"/>

                <ImageView
                    android:id="@+id/admin_product_image"
                    android:layout_width="200dp"
                    android:padding="5dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_border_white" />

                <TextView
                    android:id="@+id/show_admin_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:text="Product Name"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/admin_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:maxLines="2"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:background="@drawable/white_line1"
                    android:textSize="23dp"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"/>

                <TextView
                    android:id="@+id/show_admin_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:text="Product Price"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/admin_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginBottom="20dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:background="@drawable/white_line1"
                    android:inputType="numberSigned"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:textSize="23dp" />

                <TextView
                    android:id="@+id/show_admin_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Product Quantity"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/admin_product_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginBottom="20dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:background="@drawable/white_line1"
                    android:inputType="numberSigned"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:textSize="23dp" />

                <TextView
                    android:id="@+id/show_admin_product_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Product Category"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:textSize="23dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:background="@drawable/white_line1"
                    android:maxLines="3"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:textSize="23dp" />

                <TextView
                    android:id="@+id/show_admin_product_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Product Description"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:textSize="23dp" />

                <EditText
                    android:id="@+id/admin_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:maxLines="4"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:background="@drawable/white_line1"
                    android:textSize="23dp"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/admin_add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:textFontWeight="700"
                    android:shadowColor="#66333333"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:paddingLeft="30dp"
                    android:paddingRight="35dp"
                    android:textAllCaps="false"
                    android:textSize="25dp"
                    android:text="Add product"
                    android:background="@drawable/edit_border3_button" />

            </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>