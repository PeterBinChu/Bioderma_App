<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/best">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp">

                <include layout="@layout/carousel_view" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="19dp">
                <include layout="@layout/search_view"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_border2_no_shadow"
                    android:text="All"
                    android:textFontWeight="700"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:textSize="18dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:layout_marginRight="5dp"
                    android:shadowColor="#66333333"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:id="@+id/all_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_border2_no_shadow"
                    android:text="pury"
                    android:textFontWeight="700"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:textSize="18dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:layout_marginRight="5dp"
                    android:shadowRadius="10"
                    android:shadowColor="#66333333"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"

                    android:id="@+id/pury_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_border2_no_shadow"
                    android:text="Treat"
                    android:textFontWeight="700"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:textSize="18dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:layout_marginRight="5dp"
                    android:shadowColor="#66333333"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/treat_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_border2_no_shadow"
                    android:text="Care"
                    android:textFontWeight="700"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:textSize="18dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:shadowColor="#66333333"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:id="@+id/care_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <include layout="@layout/recyclerview" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>





