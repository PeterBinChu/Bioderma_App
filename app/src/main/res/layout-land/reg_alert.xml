<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:background="@drawable/border_with_shadow3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                   android:src="@drawable/sadface2" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quick"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:shadowColor="#66333333"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="4"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="23dp"
                    android:text="Do you want to log out?"
                    android:layout_gravity="center"
                    android:textColor="@color/ic_launcher_background"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_border3_button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:elevation="8dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="27dp"
                    android:text="Yes"
                    android:textAllCaps="false"
                    android:fontFamily="@font/quick"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:shadowColor="#66333333"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/ic_launcher_background"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_border3_button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:elevation="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="27dp"
                    android:text="No"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:fontFamily="@font/quick"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:textFontWeight="700"
                    android:shadowRadius="10"
                    android:shadowColor="#66333333"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/ic_launcher_background"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>