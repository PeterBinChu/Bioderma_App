<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.DescriptionFragment"
    android:background="@drawable/best"
    android:id="@+id/mainDescriptionId">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_border2_no_shadow"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/edit_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_border2_no_shadow"
                    android:text="Edit product"
                    android:textAllCaps="false"
                    android:textFontWeight="700"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quick"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:textSize="25dp"
                    android:shadowDx="10"
                    android:shadowDy="5"
                    android:visibility="gone"
                    android:shadowRadius="10"
                    android:shadowColor="#66333333" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/product_image"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/round_logo"
                        app:civ_border_color="#EF78A8"
                        app:civ_border_width="4dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#EF78A8"
                        app:civ_shadow_radius="3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical"
                            android:background="@drawable/edit_border2">

                            <TextView
                                android:id="@+id/product_name_show"
                                android:layout_width="match_parent"
                                android:shadowDx="10"
                                android:shadowDy="5"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textFontWeight="700"
                                android:shadowRadius="10"
                                android:shadowColor="#66333333"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quick"
                                android:textSize="17dp"
                                android:text="Name: "
                                android:textColor="@color/ic_launcher_background" />

                            <EditText
                                android:id="@+id/product_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:shadowDx="10"
                                android:shadowDy="5"
                                android:textFontWeight="700"
                                android:shadowRadius="10"
                                android:shadowColor="#66333333"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:fontFamily="@font/quick"
                                android:enabled="false"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:background="@drawable/empty_draw"
                                android:paddingLeft="20dp"
                                android:textSize="20dp"
                                android:textColor="@color/ic_launcher_background" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/edit_border2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/product_price_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quick"
                                android:shadowDx="10"
                                android:shadowDy="5"
                                android:textFontWeight="700"
                                android:shadowRadius="10"
                                android:shadowColor="#66333333"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:maxLines="1"
                                android:textSize="17dp"
                                android:paddingLeft="5dp"
                                android:text="Price(tg): "
                                android:textColor="@color/ic_launcher_background" />

                            <EditText
                                android:id="@+id/product_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:shadowDx="10"
                                android:shadowDy="5"
                                android:textFontWeight="700"
                                android:shadowRadius="10"
                                android:shadowColor="#66333333"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:digits="0123456789"
                                android:fontFamily="@font/quick"
                                android:maxLines="2"
                                android:enabled="false"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:background="@drawable/empty_draw"
                                android:textSize="18dp"
                                android:textColor="@color/ic_launcher_background" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/edit_border2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/product_quantity_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quick"
                                android:shadowDx="10"
                                android:shadowDy="5"
                                android:textFontWeight="700"
                                android:shadowRadius="10"
                                android:shadowColor="#66333333"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:textSize="17dp"
                                android:text="Quantity: "
                                android:textColor="@color/ic_launcher_background"/>

                            <EditText
                                android:id="@+id/product_quantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:shadowDx="10"
                                android:shadowDy="5"
                                android:textFontWeight="700"
                                android:shadowRadius="10"
                                android:shadowColor="#66333333"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:fontFamily="@font/quick"
                                android:maxLines="2"
                                android:digits="0123456789"
                                android:inputType="numberDecimal"
                                android:enabled="false"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:background="@drawable/empty_draw"
                                android:textSize="18dp"
                                android:textColor="@color/ic_launcher_background" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edit_border2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_category_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quick"
                        android:shadowDx="10"
                        android:shadowDy="5"
                        android:textFontWeight="700"
                        android:shadowRadius="10"
                        android:shadowColor="#66333333"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:maxLines="1"
                        android:textSize="17dp"
                        android:text="Category: "
                        android:layout_gravity="center"
                        android:textColor="@color/ic_launcher_background" />

                    <EditText
                        android:id="@+id/product_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:shadowDx="10"
                        android:shadowDy="5"
                        android:textFontWeight="700"
                        android:paddingLeft="20dp"
                        android:shadowRadius="10"
                        android:shadowColor="#66333333"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:fontFamily="@font/quick"
                        android:maxLines="2"
                        android:enabled="false"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:background="@drawable/empty_draw"
                        android:textSize="18dp"
                        android:textColor="@color/ic_launcher_background" />
                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="wrap_content"
                        android:background="@drawable/empty_draw"
                        android:layout_height="30dp"
                        android:fontFamily="@font/quick"
                        android:maxLines="3"
                        android:visibility="gone"
                        android:paddingLeft="20dp"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_border2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_description_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quick"
                        android:shadowDx="10"
                        android:shadowDy="5"
                        android:textFontWeight="700"
                        android:shadowRadius="10"
                        android:shadowColor="#66333333"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:maxLines="1"
                        android:textSize="17dp"
                        android:text="Description: "
                        android:layout_gravity="center"
                        android:textColor="@color/ic_launcher_background"/>

                    <EditText
                        android:id="@+id/product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:shadowDx="10"
                        android:shadowDy="5"
                        android:textFontWeight="700"
                        android:paddingLeft="20dp"
                        android:shadowRadius="10"
                        android:shadowColor="#66333333"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:fontFamily="@font/quick"
                        android:enabled="false"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:background="@drawable/empty_draw"
                        android:textSize="18dp"
                        android:textColor="@color/ic_launcher_background"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_border2_no_shadows"
                        android:text="Add product"
                        android:textAllCaps="false"
                        android:textFontWeight="700"
                        android:textColor="@color/white"
                        android:fontFamily="@font/quick"
                        android:textSize="25dp"
                        android:shadowDx="10"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:shadowColor="#66333333" />

                </LinearLayout>



            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>